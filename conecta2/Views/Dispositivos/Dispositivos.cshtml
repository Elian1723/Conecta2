@{
    Layout = "_Layout";
    ViewData["Title"] = "Mis Iconos";
}
<div class="container mt-5 shadow-sm p-3 rounded">
    <h2 class="text-center mb-4">Mis Dispositivos</h2>

    <!-- Contenedor para el Dispositivo 1 -->
